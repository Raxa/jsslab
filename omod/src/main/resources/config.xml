<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">
	
    <!-- Module Properties -->
	<id>jsslab</id>
	<name>JSSLab Module</name>
	<version>1.0-SNAPSHOT</version>
	<package>org.openmrs.module.jsslab</package>
	<author>rfriedman</author>
	<description>
			Specimen-based lab module for JSS
	</description>
	
	<!-- / Module Properties -->
	
	<require_version>1.8.0.00</require_version>
	<require_modules>
		<require_module>org.openmrs.module.webservices.rest</require_module> 
	</require_modules>

    <!-- Module Activator -->
	<activator>org.openmrs.module.jsslab.jsslabActivator</activator>

	<!-- Global Properties -->
	<globalProperty>
		<property>jsslab.homeLab</property>
		<description>Location id of lab supported by this instance</description>
	</globalProperty>

	<!-- Permissions -->
	<permission>
		<name>Ordering</name>
		<description>Create or edit lab orders</description>
	</permission>
		
	<!-- Add link to admin page --> 
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.jsslab.extension.html.JSSLabAdmExt</class>
	</extension>    
  	  	
  	<!-- Maps hibernate file's , if present -->   	
   	<mappingFiles>
LabInstrument.hbm.xml
LabTestPanel.hbm.xml
LabPrecondition.hbm.xml
LabReport.hbm.xml
LabTest.hbm.xml
LabTestRange.hbm.xml
LabSpecimen.hbm.xml
LabSupplyItem.hbm.xml
LabTestRun.hbm.xml
LabTestSpecimen.hbm.xml
LabOrder.hbm.xml
LabOrderSpecimen.hbm.xml
	</mappingFiles>
<!-- 
LabTestResult.hbm.xml
-->
	
	<!-- Internationalization -->
	<!-- All message codes should start with @MODULE_ID@.* -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->
	
<context:component-scan base-package="org.openmrs.module.jsslab" /> 
</module>

